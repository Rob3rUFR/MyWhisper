# Hugging Face Token (optionnel - pour autres modèles HF)
# Obtenir sur: https://huggingface.co/settings/tokens
HF_TOKEN=

# Model Configuration
WHISPER_MODEL=large-v3
DEVICE=cuda
COMPUTE_TYPE=float16

# Diarization (NVIDIA NeMo Sortformer - pas de token requis)
# Modèle téléchargé automatiquement depuis NGC
ENABLE_DIARIZATION=true

# Limits
MAX_FILE_SIZE=524288000

# Ollama (optionnel - pour post-traitement LLM)
# URL de votre instance Ollama (laisser vide pour désactiver)
OLLAMA_URL=http://localhost:11434
# Modèle à utiliser (laisser vide pour lister tous les modèles disponibles)
OLLAMA_MODEL=